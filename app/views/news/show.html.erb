<div class="container">
  <div class="card">
    <div class="card-header">
      <h3 class="display-4 news_font text-center">News</h3>
    </div>
  </div>
  <% @news.map do |news| %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title"><%= news[:title] %></h5>
        <p><%= news[:author]%></p>
        <p class="card-text"><%= news[:description] %></p>
        <p class="card-text"><%= link_to 'Read More', news[:url] %></p>
      </div>
      <%= image_tag news[:urlToImage], class:"card-img-top" %>
    </div>
  <% end %>
</div>
